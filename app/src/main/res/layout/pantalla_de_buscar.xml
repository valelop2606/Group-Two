<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Botón de regreso -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:padding="12dp"
            android:src="@drawable/flecha_atras"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título principal -->
        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Lo que tengo en casa"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <!-- Subtítulo -->
        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Agrega tus ingredientes disponibles"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

        <!-- Barra de búsqueda -->
        <EditText
            android:id="@+id/etBuscarIngrediente"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_buscar"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="Buscar ingrediente..."
            android:paddingStart="16dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitulo" />

        <!-- Ingredientes seleccionados -->
        <TextView
            android:id="@+id/tvSeleccionados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ingredientes seleccionados:"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBuscarIngrediente" />

        <!-- Chips seleccionados -->
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSeleccionados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSeleccionados"
            app:singleLine="false">
        </com.google.android.material.chip.ChipGroup>

        <!-- Botón principal -->
        <Button
            android:id="@+id/btnVerPreparar"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:text="Ver qué puedo preparar (3)"
            android:textColor="@color/textColor"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipGroupSeleccionados" />

        <!-- Título ingredientes comunes -->
        <TextView
            android:id="@+id/tvComunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ingredientes comunes"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerPreparar" />

        <!-- Chips de ingredientes comunes -->
        <LinearLayout
            android:id="@+id/ingredientsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvComunes">

            <!-- Alcoholes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Alcoholes"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAlcoholes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Ron"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVodka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Vodka"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Gin"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTequila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Tequila"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWhisky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Whisky"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCointreau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Cointreau"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVermut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Vermut"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTripleSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Triple Sec"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCampari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Campari"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLicorCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Licor de café"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Frutas / Cítricos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Frutas / Cítricos"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFrutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Lima"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLimon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Limón"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNaranja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Naranja"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Piña"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCereza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Cereza"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Otros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Otros"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Menta"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAzucar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Azúcar"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHielo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Hielo"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGranadina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Jarabe de granadina"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSoda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Soda"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAguaGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Agua con gas"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLeche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Leche"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Café"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCremaCoco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="Crema de coco"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>