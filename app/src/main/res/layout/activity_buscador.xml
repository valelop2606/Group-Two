<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/regresar_descripcion"
            android:padding="12dp"
            android:src="@drawable/flecha_atras"
            app:tint="@color/rosa"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/lo_que_tengo_en_casa_boton"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack" />

        <TextView
            android:id="@+id/tvSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/agrega_tus_ingredientes_disponibles"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

        <EditText
            android:id="@+id/etBuscarIngrediente"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_buscar"
            android:drawablePadding="8dp"
            android:drawableStart="@android:drawable/ic_menu_search"
            android:hint="@string/buscar_ingrediente"
            android:paddingStart="16dp"
            android:textColor="@color/textColor"
            android:textColorHint="@color/hint_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitulo" />


        <TextView
            android:id="@+id/tvSeleccionados"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/ingredientes_seleccionados"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etBuscarIngrediente" />


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSeleccionados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:chipSpacing="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSeleccionados"
            app:singleLine="false">
        </com.google.android.material.chip.ChipGroup>


        <Button
            android:id="@+id/btnVerPreparar"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/colorPrimary"
            android:fontFamily="sans-serif-medium"
            android:text="@string/ver_qu_puedo_preparar"
            android:textColor="@color/textColor"
            app:cornerRadius="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chipGroupSeleccionados" />

        <TextView
            android:id="@+id/tvResultadosTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/resultados"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnVerPreparar" />

        <LinearLayout
            android:id="@+id/containerResultados"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvResultadosTitle">
        </LinearLayout>

        <TextView
            android:id="@+id/tvComunes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/ingredientes_comunes"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/containerResultados" />


        <LinearLayout
            android:id="@+id/ingredientsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvComunes">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/alcoholes"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupAlcoholes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipRon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/ron"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVodka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/vodka"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/gin"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTequila"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/tequila"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWhisky"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/whisky"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCointreau"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/cointreau"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipVermut"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/vermut"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipTripleSec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/triple_sec"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCampari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/campari"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLicorCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/licor_de_caf"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Frutas / CÃ­tricos -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/frutas_c_tricos"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupFrutas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/lima"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLimon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/lim_n"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipNaranja"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/naranja"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipPina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/pi_a"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCereza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/cereza"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>

            <!-- Otros -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/otros"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupOtros"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:chipSpacing="8dp"
                app:singleLine="false">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipMenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/menta"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAzucar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/az_car"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipHielo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/hielo"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipGranadina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/jarabe_de_granadina"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipSoda"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/soda"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipAguaGas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/agua_con_gas"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipLeche"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/leche"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/caf"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chipCremaCoco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checkable="true"
                    android:text="@string/crema_de_coco"
                    android:textColor="@color/textColor"
                    app:chipBackgroundColor="@color/chip_selected_color" />
            </com.google.android.material.chip.ChipGroup>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>