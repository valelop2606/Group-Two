<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mixify"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingBottom="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tu bar personal"
                android:textSize="14sp"
                android:textColor="#FF69B4"
                android:paddingBottom="8dp" />

            <!-- Search -->
            <EditText
                android:id="@+id/etBuscarIngrediente"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:hint="Buscar por nombre, tipo o ingrediente"
                android:textColorHint="#B0B0B0"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:layout_marginBottom="8dp" />

            <!-- Filter Button -->
            <Button
                android:id="@+id/btnTengoEnCasa"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Lo que tengo en casa"
                android:background="#00CED1"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="12dp" />

            <!-- RESULTADOS DE BÚSQUEDA -->
            <TextView
                android:id="@+id/tvResultadosTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Resultados de búsqueda"
                android:textSize="16sp"
                android:textColor="#FF69B4"
                android:paddingBottom="8dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/containerResultados"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <!-- CONTENIDO ESTÁTICO (se oculta cuando hay resultados) -->
            <LinearLayout
                android:id="@+id/contenidoEstatico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Clásicos"
                        android:background="@android:color/darker_gray"
                        android:textColor="#FFFFFF" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Creativos"
                        android:background="@android:color/darker_gray"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <Button
                    android:id="@+id/boton_categorias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Categorias"
                    android:textColor="@color/blanco"/>

                <!-- Sección: Para ti -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Para ti"
                    android:textSize="16sp"
                    android:textColor="#FF69B4"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="10dp">

                            <ImageButton
                                android:id="@+id/btnMojito"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@color/black"
                                android:contentDescription="Imagen de Mojito"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/mojito" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mojito"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fácil"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="10dp">
                            <ImageButton
                                android:id="@+id/imagen_cosmopolitan"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:background="@color/black"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/cosmopolitan"
                                android:contentDescription="Imagen de Cosmopolitan" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/textView_cosmopolitan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cosmopolitan"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Media"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Sección: Tendencias -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tendencias"
                    android:textSize="16sp"
                    android:textColor="#FF69B4"
                    android:paddingBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">
                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="10dp">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:background="@color/black"
                                app:srcCompat="@drawable/margarita"
                                android:contentDescription="Imagen de Margarita" />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Margarita"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Clásico - Fácil"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="4dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            app:cardCornerRadius="10dp">
                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:background="@color/black"
                                app:srcCompat="@drawable/negroni"
                                android:contentDescription="Imagen de Negroni" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Negroni"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Amargo - Media"
                            android:textColor="#B0B0B0"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNav"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#2F2F2F"
        android:gravity="center"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/buscador"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/home_icon_silhouette_svgrepo_com"
                android:background="@null"
                app:tint="#FF69B4"
                android:contentDescription="Inicio" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textColor="#FF69B4"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnBuscarIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/buscar"
                android:scaleType="fitCenter"
                android:background="@null"
                app:tint="@color/rosa"
                android:contentDescription="Buscar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buscar"
                android:textColor="@color/rosa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnCalculadora"
                android:layout_width="22dp"
                android:layout_height="22dp"
                app:srcCompat="@drawable/calculadora"
                android:scaleType="fitCenter"
                android:background="@null"
                app:tint="@color/rosa"
                android:contentDescription="Calculadora" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculadora"
                android:textColor="@color/rosa"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/perfil"
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/perfil"
                android:scaleType="fitCenter"
                android:background="@null"
                app:tint="@color/rosa"
                android:contentDescription="Perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="@color/rosa"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>