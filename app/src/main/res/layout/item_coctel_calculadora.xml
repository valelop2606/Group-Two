<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardCoctel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="#1E1E1E"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Imagen del cóctel -->
        <ImageView
            android:id="@+id/ivCoctel"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:background="#2E2E2E"/>

        <!-- Info del cóctel -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreCoctel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mojito"
                android:textColor="@color/textColor"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBebidasCoctel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="5 bebidas"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Contador -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnMenosCoctel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#2E2E2E"
                android:src="@drawable/menos"
                android:textSize="20sp"
                app:cornerRadius="24dp"
                app:tint="@color/blanco" />

            <TextView
                android:id="@+id/tvCantidadCoctel"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5"
                android:textColor="@color/textColor"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnMasCoctel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:backgroundTint="#2E2E2E"
                android:src="@drawable/mas"
                android:textSize="20sp"
                app:cornerRadius="24dp"
                app:tint="@color/blanco" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>